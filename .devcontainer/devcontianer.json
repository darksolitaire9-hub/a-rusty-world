{
  "name": "A Rusty World",
  "image": "mcr.microsoft.com/devcontainers/rust:2.0.4-bookworm",
  "customizations": {
    "vscode": {
      "settings": {
        "files.watcherExclude": {
          "**/target/**": true
        }
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates"
      ]
    }
  },
  "remoteUser": "vscode"
}
